<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.livros.DetalhesLivroActivity">

    <ImageView
        android:id="@+id/iv_capa_livro"
        android:layout_width="120dp"
        android:layout_height="180dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"
        android:background="@color/teal_200"
        />

    <TextView
        android:id="@+id/tv_titulo_livro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Harry Potter e as Reliquias da morte"
        app:layout_constraintStart_toEndOf="@id/iv_capa_livro"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tv_autor_livro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="J.K Rolling"
        app:layout_constraintStart_toStartOf="@id/tv_titulo_livro"
        app:layout_constraintTop_toBottomOf="@id/tv_titulo_livro"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editora - ano"
        app:layout_constraintTop_toBottomOf="@id/tv_autor_livro"
        app:layout_constraintStart_toStartOf="@id/tv_autor_livro"
        app:layout_constraintBottom_toBottomOf="@id/iv_capa_livro"/>

    <TextView
        android:id="@+id/tv_descricao_livro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_capa_livro"
        android:text=""
        android:maxLength="300"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>